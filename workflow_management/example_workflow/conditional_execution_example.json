{
    "plan_name": "Conditional Greeting Workflow",
    "tasks": [
      {
        "id": "task_greet",
        "type": "greet",
        "description": "Greets a specific entity.",
        "tool_parameters": {
            "name": "Jupiter"
        },
        "dependencies": []
      },
      {
        "id": "task_jupiter_branch",
        "type": "farewell",
        "description": "This task runs if the greeting was for Jupiter.",
        "dependencies": [
          { 
            "source": "task_greet", 
            "condition": "result == 'Hello, Jupiter!'" 
          }
        ]
      },
      {
        "id": "task_other_branch",
        "type": "farewell",
        "description": "This task runs if the greeting was NOT for Jupiter.",
        "dependencies": [
          { 
            "source": "task_greet", 
            "condition": "result != 'Hello, Jupiter!'" 
          }
        ]
      }
    ]
  }
